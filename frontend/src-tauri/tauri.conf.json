{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173"
  },
  "package": {
    "productName": "Dennep Clothes POS",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": [
          "$APP/**",
          "$APPDATA/**",
          "$APPCONFIG/**",
          "$APPLOCALDATA/**",
          "$APPLOG/**",
          "$DOWNLOAD/**",
          "$DOCUMENT/**"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "scope": [
          {
            "name": "powershell-print",
            "cmd": "powershell",
            "args": [
              "-NoProfile",
              "-Command",
              { "validator": "Start-Process -FilePath .+" }
            ]
          }
        ]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true,
        "message": true,
        "ask": true,
        "confirm": true
      },
      "os": {
        "all": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "Dennep Clothes POS",
        "url": "/",
        "resizable": true,
        "fullscreen": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "bundle": {
      "active": true,
      "targets": [
        "msi",
        "dmg"
      ],
      "identifier": "com.dennep.pos",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    },
    "macOSPrivateApi": false,
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'"
    }
  }
}
